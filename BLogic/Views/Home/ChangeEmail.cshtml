@model ChangeEmailViewModel
@{
    ViewData["Title"] = "Změna emailu";
}

<div class="container">
    <form method="post">
    <div class="row mt-4 text-center"> 
        <h1 class="mb-0">Změna emailu</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-3 col-md-1">
            <hr class="mb-md-5"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-4">
            <div class="form-group mb-2 mb-md-0">
                <label asp-for="OldEmail" class="fw-bold"></label>
                <input asp-for="OldEmail" class="form-control" disabled tabindex="-1"/>
            </div>
        </div>
        <div class="col-12 col-md-4 mt-3 mt-md-0">
            <div class="form-group mb-2 mb-md-0">
                <label asp-for="NewEmail" class="fw-bold"></label>
                <input asp-for="NewEmail" class="form-control" placeholder="jmeno@domena.cz"/>
                <span asp-validation-for="NewEmail" class="text-danger fw-bold"></span>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-4 text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg">Uložit</button>
            <a asp-action="Index" class="btn btn-danger btn-lg">Zrušit</a>
        </div>
    </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
