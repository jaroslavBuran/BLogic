@model BLogic.Models.Clients.Client

@{
    ViewData["Title"] = "Přidat klienta";
}

<form method="post">
    <div class="row text-center"> 
        <h1 class="mb-0">Nový klient</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-3 col-md-1">
            <hr class="mb-md-5"/>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-3">
            <div class="form-group mb-2 mb-md-0">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="form-group mb-2 mb-md-0">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="form-group mb-2 mb-md-0">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <hr class="my-4" />
    </div>
    <div class="row">
        <div class="col mb-2">
            <h4>Klient</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-3">
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" placeholder="Martin"/>
                <span asp-validation-for="Phone" class="text-danger fw-bold"></span>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="form-group">
                <label asp-for="BirthNumber"></label>
                <input asp-for="BirthNumber" class="form-control" placeholder="Novák"/>
                <span asp-validation-for="BirthNumber" class="text-danger fw-bold"></span>
            </div>
        </div>
        <div class="col-8 col-md-3">
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" placeholder="1234567890"/>
                <span asp-validation-for="Age" class="text-danger fw-bold"></span>
            </div>
        </div>
        <hr class="my-4" />
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col text-center">
            <button type="submit" class="btn btn-success btn-lg">Uložit</button>
            <a asp-action="Index" class="btn btn-danger btn-lg">Zrušit</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
