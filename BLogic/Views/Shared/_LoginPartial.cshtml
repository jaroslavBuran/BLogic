@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Můj účet</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Home" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark fw-bold" id="logOut">Odhlásit se</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Home" asp-action="Register">Registrovat</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Přihlásit se</a>
    </li>
}
</ul>
